# git functions
function gdm() {
	pwd
	git diff master... --name-status | sed -e 's/^/	/'
}


function mdiff() {
	git diff master... $1
}

function gcq() {
	if [ "$1" == "" ]
	then
		pwd
		git log -1 --oneline --name-status | sed -e 's/^/	/'
		return
	fi

	if `git branch | grep -q cq$1`
	then
		git checkout cq$1
	else
		git checkout -b cq$1
	fi
}
# vim: set syn=sh :
