# common aliases

alias clear='echo -e "\e[2J"'
alias ls='ls --color=always'
alias lf='ls -Arthop'
alias l='lf'
alias nl="nl -ba"

alias p='pushd'
alias o='popd'
alias d='dirs'
alias less='less -R'

alias mounthp='sudo mount -tntfs /dev/sda2 /media/HP/'

alias follow=". ~/bin/follow"
